<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") -%>

  <body>
    <div class="site-wrap bg-light">
      <%- include("partials/navigationloggedin", {page:"communities"}); -%> <%
      if(communityData.length!=0){ var i=1; communityData.forEach(function(data){ %>

      <div class="site-section">
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <img src="<%=data.CommunityImg%>" alt="Image" class="img-fluid" />
            </div>
            <div class="col-md-6 pt-3">
              <h2 class="text-black"><%=data.CommunityName %></h2>
              <p><%=data.Description %></p>
            </div>
          </div>
        </div>

        <div class="site-section">
          <div class="container">
            <h2 class="text-black text-center">Request to join</h2>
            <form action="requestjoin" method="POST">
              <div class="form-group">
                <label class="form-label">Why would you like to join this community?</label>
                <textarea
                  type="text"
                  class="form-control mb-1"
                  rows="10"
                  placeholder="Type your message here..."
                  name="message"
                ></textarea>
                <input type="hidden" name="communityid" value="<%= data.CommunityID %>" />
              </div>
              <input
                class="btn btn-sm btn-primary btn-block"
                style="width: 100%; font-size: large"
                style="border: none"
                type="submit"
                value="Sumbit"
              />
            </form>
          </div>
        </div>
      </div>
      <% i++; }) %> <% } else{ %>
      <tr>
        <td colspan="7">No Data Found</td>
      </tr>
      <% } %>
      <!-- Start Fixed Background IMG -->

      <div class="fixed-background">
        <div class="fixed-wrap">
          <div class="fixed"></div>
        </div>
      </div>
    </div>

    <!-- Start Footer -->
    <%- include("partials/footer") -%>

    <!-- End Footer -->

    <!-- jQuery -->
    <script src="js/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap 4.5 JS -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Popper JS -->
    <script src="js/popper.min.js"></script>
    <!-- Font Awesome -->
    <script src="js/all.min.js"></script>

    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/jquery-ui.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/aos.js"></script>

    <script src="js/main.js"></script>

    <!-- End Script Source Files -->
  </body>
</html>
