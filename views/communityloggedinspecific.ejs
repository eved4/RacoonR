<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") -%>

  <body>
    <div class="site-wrap bg-light">
      <%- include("partials/navigationloggedin", {page:"communities"}); -%> <%
      if(communityData.length!=0){ var i=1; communityData.forEach(function(data){ %>

      <div class="site-section">
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <img src="<%=data.CommunityImg%>" alt="Image" class="img-fluid" />
            </div>
            <div class="col-md-6 pt-3">
              <h2 class="text-black"><%=data.CommunityName %></h2>
              <p><%=data.Description %></p>
              <br />
              <h3 class="mb-3 h6 text-uppercase text-black d-block text-center border-primary">
                <br />Add a community item
                <a
                  class="btn btn-primary"
                  href="/addcommunityitem?category=<%=data.CommunityName %>&communityid=<%=data.CommunityID %>"
                  ><i class="fas fa-plus"></i>
                </a>
              </h3>
            </div>
          </div>

          <br />
          <br />

          <div class="col-md-12 order-2">
						<div class="row">
							<div class="col-md-12 mb-5">

								<div class="col-12 text-center mt-2 bg-light">
									<h1 class="text-dark">Community Items</h1>
									<div class="border-top border-primary d-none d-lg-block w-25 mx-auto my-3">
									</div>
									<p class="lead">Browse the items that other community members are donating or searching for</p>
								</div>
							</div>
						</div>

            <div class="row mb-5">
              <% i++; }) %> <% } else{ %>
              <tr>
                <td colspan="7">No Data Found</td>
              </tr>
              <% } %> <% if(communityitemsData.length!=0){ var i=1;
              communityitemsData.forEach(function(data){ %>

              <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                <div class="block-4 text-center border">
                  <div class="block-4-text p-4">
                    <h3><a href="/communityitem?itemid=<%= data.ItemID %>"><%=data.Title %> </a></h3>
                    <a href="/communityitem?itemid=<%= data.ItemID %>"
                      ><img
                        src="<%=data.ImagePath %>"
                        alt="Image placeholder"
                        class="img-fluid"
                        loading="lazy"
                    /></a>
                    <br />
                    <p class="mb-0"><%=data.Description %></p>
                  </div>
                </div>
              </div>

              <% i++; }) %> <% } else{ %>
              <tr>
                <td colspan="7">No Data Found</td>
              </tr>
              <% } %>
            </div>

        </div>
      </div>
      

      <!-- Start Fixed Background IMG -->

      <div class="fixed-background">
        <div class="fixed-wrap">
          <div class="fixed"></div>
        </div>
      </div>
    </div>

    <!-- Start Footer -->
    <%- include("partials/footer") -%>

    <!-- End Footer -->

    <!-- jQuery -->
    <script src="js/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap 4.5 JS -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Popper JS -->
    <script src="js/popper.min.js"></script>
    <!-- Font Awesome -->
    <script src="js/all.min.js"></script>

    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/jquery-ui.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/aos.js"></script>

    <script src="js/main.js"></script>

    <!-- End Script Source Files -->
  </body>
</html>
