<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") -%>

  <body>
    <div style="background-image: url('img/leaves2.jpg')">
      <%- include("partials/navigation", {page:"register"}); -%>

      <!-- Register -->

      <div class="container center_div bg-light rounded shadow-lg">
        <!-- Main Page Heading -->

        <div class="col-12 text-center mt-5">
          <h1 class="text-dark pt-4">Register</h1>
          <div class="border-top border-primary d-none d-lg-block w-25 mx-auto my-3"></div>
        </div>
        <form action="/register" method="POST" class="pt-4 .center_div">
          <!-- Name input -->
          <div class="form-outline mb-4">
            <input type="text" id="user_firstname" class="form-control" name="firstname" />
            <label class="form-label" for="form3Example1">First name / Organisation name</label>
          </div>

          <!-- Surname input -->
          <div class="form-outline mb-4">
            <input type="text" id="user_lastname" class="form-control" name="lastname" />
            <label class="form-label" for="form3Example2"
              >Last name (leave blank if you are an organisation)</label
            >
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <input type="email" id="user_email" class="form-control" name="email" />
            <label class="form-label" for="form3Example3">Email address</label>
          </div>

          <!-- city input -->
          <div class="form-outline mb-4">
            <input type="text" id="user_name" class="form-control" name="city" />
            <label class="form-label" for="form3Example3">City</label>
          </div>

          <!-- postcode input -->
          <div class="form-outline mb-4">
            <input type="text" id="user_name" class="form-control" name="postcode" />
            <label class="form-label" for="form3Example3">Postcode</label>
          </div>

          <!-- country input -->
          <div class="form-outline mb-4">
            <input type="text" id="user_name" class="form-control" name="country" />
            <label class="form-label" for="form3Example3">Country</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <input type="password" id="user_password" class="form-control" name="password" />
            <label class="form-label" for="form3Example4">Password</label>
          </div>

          <div class="form-group">
            <label class="form-label">Type</label>
            <div class="form-group px-5">
              <label class="switcher">
                <tr>
                  <td>Individual</td>
                  <td>
                    <input type="radio" name="type" value="individual" checked />
                  </td>
                </tr>
              </label>
            </div>
            <div class="form-group px-5">
              <label class="switcher">
                <tr>
                  <td>Organisation</td>
                  <td>
                    <input type="radio" name="type" value="organisation" />
                  </td>
                </tr>
              </label>
            </div>
          </div>

          <!-- Submit button -->
          <div class="row justify-content-center">
            <input
              class="btn btn-sm btn-primary btn-block"
              style="width: 50%; font-size: large"
              style="background-color: #199e0f; border: none"
              type="submit"
              value="Sign up"
            />
          </div>

          <!-- Register buttons -->
          <div class="text-center py-5">
            <p>or sign up with:</p>
            <button
              type="button"
              class="btn btn-primary btn-floating mx-1"
              style="background-color: #199e0f; border: none"
            >
              <i class="fab fa-facebook-f"></i>
            </button>

            <button
              type="button"
              class="btn btn-primary btn-floating mx-1"
              style="background-color: #199e0f; border: none"
            >
              <i class="fab fa-google"></i>
            </button>

            <button
              type="button"
              class="btn btn-primary btn-floating mx-1"
              style="background-color: #199e0f; border: none"
            >
              <i class="fab fa-twitter"></i>
            </button>

            <button
              type="button"
              class="btn btn-primary btn-floating mx-1"
              style="background-color: #199e0f; border: none"
            >
              <i class="fab fa-github"></i>
            </button>
          </div>
        </form>
      </div>
      <br /><br /><br /><br />

      <!-- Login end -->

      <!-- Start Fixed Background IMG -->
    </div>

    <%- include("partials/footer") -%>

    <!-- Script Source Files -->

    <!-- jQuery -->
    <script src="js/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap 4.5 JS -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Popper JS -->
    <script src="js/popper.min.js"></script>
    <!-- Font Awesome -->
    <script src="js/all.min.js"></script>

    <!-- End Script Source Files -->
  </body>
</html>
