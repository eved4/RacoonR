<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") -%>

  <body>
    <div style="background-image: url('img/leaves2.jpg')">
      <%- include("partials/navigation", {page:"login"}); -%>

      <!-- Login -->

      <div class="container center_div bg-light rounded shadow-lg">
        <div class="col-12 text-center mt-5">
          <h1 class="text-dark pt-4">Login</h1>
          <div class="border-top border-primary d-none d-lg-block w-25 mx-auto my-3"></div>
        </div>
        <div class="alert alert-warning" role="alert">
          Login failed. Incorrect email or password.
        </div>
        <form action="/login" method="POST" class="pt-4 .center_div">
          <!-- Email input -->
          <div class="form-outline mb-4">
            <input type="input" id="form2Example1" class="form-control" name="email" />
            <label class="form-label" for="form2Example1">Email</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <input type="password" id="form2Example2" class="form-control" name="password" />
            <label class="form-label" for="form2Example2">Password</label>
          </div>
          <div class="row mb-4">
            <div class="col d-flex justify-content-center">
              <!-- Checkbox -->
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="form2Example3" />
                <label class="form-check-label" for="form2Example3">Remember me </label>
              </div>
            </div>

            <div class="col">
              <!-- Simple link -->
              <a href="#!">Forgot password?</a>
            </div>
          </div>
          <!-- Submit button -->
          <div class="row justify-content-center">
            <input
              class="btn btn-sm btn-primary btn-block"
              style="width: 50%; font-size: large"
              style="background-color: #199e0f; border: none"
              type="submit"
              value="Login"
            />
          </div>
        </form>

        <!-- 2 column grid layout for inline styling -->

        <!--
<button type="submit" class="btn btn-primary btn-block mb-4"
	style="background-color : #199e0f; border: none ;">Sign in</button>-->

        <!-- Register buttons -->
        <div class="text-center py-5">
          <p>Not a member? <a href="/register">Register</a></p>
          <p>or sign up with:</p>
          <button
            type="button"
            class="btn btn-primary btn-floating mx-1"
            style="background-color: #199e0f; border: none"
          >
            <i class="fab fa-facebook-f"></i>
          </button>

          <button
            type="button"
            class="btn btn-primary btn-floating mx-1"
            style="background-color: #199e0f; border: none"
          >
            <i class="fab fa-google"></i>
          </button>

          <button
            type="button"
            class="btn btn-primary btn-floating mx-1"
            style="background-color: #199e0f; border: none"
          >
            <i class="fab fa-twitter"></i>
          </button>

          <button
            type="button"
            class="btn btn-primary btn-floating mx-1"
            style="background-color: #199e0f; border: none"
          >
            <i class="fab fa-github"></i>
          </button>
        </div>
      </div>
      <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
      <!-- Login end -->
    </div>

    <!-- Start Footer -->
    <footer>
      <div class="container">
        <div class="row text-light text-center py-4 justify-content-center">
          <div class="col-sm-10 col-md-8 col-lg-6">
            <h4>Find us on our Socials</h4>
            <ul class="social pt-3">
              <li>
                <a href="#" target="-blank"><i class="fab fa-facebook"></i></a>
              </li>
              <li>
                <a href="#" target="-blank"><i class="fab fa-twitter"></i></a>
              </li>
              <li>
                <a href="#" target="-blank"><i class="fab fa-instagram"></i></a>
              </li>
              <li>
                <a href="#" target="-blank"><i class="fab fa-youtube"></i></a>
              </li>
            </ul>
            <p class="pt-4">
              &copy;
              <a
                href="https://www.ibm.com/uk-en?p1=Search&p4=43700052448841159&p5=e&gclid=CjwKCAjwt8uGBhBAEiwAayu_9RiWGlIK-td-ZExRQ7Ez-MLdqCXJbzrivRuE1uDkvki01kXlk2TFpxoCG-EQAvD_BwE&gclsrc=aw.ds"
                target="_black"
                >www.ibm.com</a
              >
            </p>
          </div>
        </div>
      </div>
    </footer>

    <!-- End Footer -->

    <!-- Script Source Files -->

    <!-- jQuery -->
    <script src="js/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap 4.5 JS -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Popper JS -->
    <script src="js/popper.min.js"></script>
    <!-- Font Awesome -->
    <script src="js/all.min.js"></script>

    <!-- End Script Source Files -->
  </body>
</html>
