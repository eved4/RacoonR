<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") -%>

  <body>
    <%- include("partials/navigationloggedin", {page:"communities"}); -%>

    <!-- End Navigation -->

    <div>
      <div class="site-wrap bg-light">
        <div class="site-section">
          <div class="container">
            <div class="col-12 text-center mt-2 bg-light">
              <h1 class="text-dark">Add Item to <%= category %> Community</h1>
              <div class="border-top border-primary d-none d-lg-block w-25 mx-auto my-3"></div>
              <p class="lead pb-5">Add the items you are searching for or giving away</p>
            </div>
            <form action="addcommunityitem" method="POST">
              <div class="form-group">
                <label class="form-label">Image - only needed for offered items</label>
                <input type="file" class="form-control mb-1" name="img" accept="image" />
              </div>
              <div class="form-group">
                <label class="form-label">Type</label>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Offering</td>
                      <td>
                        <input type="radio" name="type" value="offering" checked />
                      </td>
                    </tr>
                  </label>
                </div>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Wanted</td>
                      <td>
                        <input type="radio" name="type" value="wanted" />
                      </td>
                    </tr>
                  </label>
                </div>
              </div>

              <div class="form-group">
                <label class="form-label">Title</label>
                <input
                  type="text"
                  class="form-control mb-1"
                  placeholder="e.g. box of food"
                  name="title"
                />
              </div>
              <div class="form-group">
                <label class="form-label">Description</label>
                <textarea
                  class="form-control"
                  rows="3"
                  placeholder="Type your description here..."
                  name="description"
                ></textarea>
              </div>

              <input type="hidden" name="category" value="<%=category %>" />

              <input type="hidden" name="communityid" value="<%=id %>" />

              <div class="form-group">
                <label class="form-label">Collection</label>

                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Pick-up</td>
                      <td>
                        <input type="radio" name="collection" value="pickup" checked />
                      </td>
                    </tr>
                  </label>
                </div>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Local delivery</td>
                      <td>
                        <input type="radio" name="collection" value="localdelivery" />
                      </td>
                    </tr>
                  </label>
                </div>
              </div>
              <div class="col-12 text-center">
                <input
                  class="btn btn-sm btn-primary btn-block"
                  style="width: 100%; font-size: large"
                  style="border: none"
                  type="submit"
                  value="Save"
                />
                <input
                  action="action"
                  class="btn btn-sm btn-secondary btn-block"
                  style="width: 100%; font-size: large"
                  style="border: none"
                  value="Cancel"
                  onclick="history.go(-1);"
                />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Start Footer -->
    <%- include("partials/footer") -%>

    <!-- End Footer -->

    <!-- Script Source Files -->

    <!-- jQuery -->
    <script src="js/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap 4.5 JS -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Popper JS -->
    <script src="js/popper.min.js"></script>
    <!-- Font Awesome -->
    <script src="js/all.min.js"></script>

    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/jquery-ui.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/aos.js"></script>

    <script src="js/main.js"></script>

    <!-- End Script Source Files -->
  </body>
</html>
