<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") -%>

  <body>
    <div style="background-image: url('img/leaves2.jpg')">
      <%- include("partials/navigation", {page:"login"}); -%>

      <!-- Login -->

      <div
        class="container center_div bg-light rounded shadow-lg"
        style="max-width: 500px; min-width: 20px; height: auto"
      >
        <div class="col-12 text-center mt-5">
          <h1 class="text-dark pt-4">Login</h1>
          <div class="border-top border-primary d-none d-lg-block w-25 mx-auto my-3"></div>
        </div>

        <form action="/login" method="POST" class="pt-4 .center_div">
          <!-- Email input -->
          <div class="form-outline mb-4">
            <input
              type="input"
              id="form2Example1"
              class="form-control"
              name="email"
              required="required"
              placeholder="Email"
            />
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <input
              type="password"
              id="form2Example2"
              class="form-control"
              name="password"
              required="required"
              placeholder="Password"
            />
          </div>
          <div class="row mb-4">
            <div class="col d-flex justify-content-center">
              <!-- Simple link -->
              <a href="#!">Forgot password?</a>
            </div>
          </div>
          <!-- Submit button -->
          <div class="row justify-content-center">
            <input
              class="btn btn-sm btn-primary btn-block"
              style="width: 50%; font-size: large"
              style="background-color: #199e0f; border: none"
              type="submit"
              value="Login"
            />
          </div>
        </form>

        <!-- 2 column grid layout for inline styling -->

        <!--
<button type="submit" class="btn btn-primary btn-block mb-4"
	style="background-color : #199e0f; border: none ;">Sign in</button>-->

        <!-- Register buttons -->
        <div class="text-center py-2">
          <p>Not a member? <a href="/register">Register</a></p>
        </div>
      </div>
      <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
      <!-- Login end -->
    </div>

    <!-- Start Footer -->
    <%- include("partials/footer") -%>

    <!-- End Footer -->

    <!-- Script Source Files -->

    <!-- jQuery -->
    <script src="js/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap 4.5 JS -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Popper JS -->
    <script src="js/popper.min.js"></script>
    <!-- Font Awesome -->
    <script src="js/all.min.js"></script>

    <!-- End Script Source Files -->
  </body>
</html>
