<!DOCTYPE html>
<html lang="en">

	<%- include("partials/head") -%>

	<body>
	  <%- include("partials/navigation", {page:"browse"}) -%>

		<!-- Navigation -->
	<nav class="subnavbar navbar-light navbar-expand-lg">

		<ul class="nav nav-tabs">
			<li class="nav-item">
				<a class="nav-link active" aria-current="page" href="/browse">Offers</a>
			</li>
			<li class=" nav-item">
				<a class="nav-link" href="/browsewanted">Wanted</a>
			</li>
		</ul>

	</nav>

	<!-- End Navigation -->

	<div class=" site-wrap bg-light">
		<div class="site-section">
			<div class="container">
				<div class="row mb-5">
					<div class="col-md-9 order-2">
						<div class="row">
							<div class="col-md-12 mb-5">

								<div class="col-12 text-center mt-2 bg-light">
									<h1 class="text-dark">Offers</h1>
									<div class="border-top border-primary d-none d-lg-block w-25 mx-auto my-3">
									</div>
									<p class="lead">Browse items in your community that are being
										donated
										and give them
										a new home</p>
								</div>

								<div class="pb-4">
									<form class="form-inline" action="searchbrowse" method="POST" >
										<div class="form-outline">
											<input type="search" id="form1" class="form-control input-group" placeholder="Search keyword..." name="search" />
											
											<button type="submit" class="btn btn-primary">
												<i class="fas fa-search"></i>
											</button>	
										</div>										
									</form>
								</div>

																<div class="d-flex">
									<div class="btn-group">
										<button type="button" class="btn btn-secondary btn-sm dropdown-toggle"
											id="dropdownMenuReference" data-toggle="dropdown">Sort</button>
										<div class="dropdown-menu" aria-labelledby="dropdownMenuReference">
											<a class="dropdown-item" href="/browsesort?sort=atoz">Name, A to Z</a>
											<a class="dropdown-item" href="/browsesort?sort=ztoa">Name, Z to A</a>
											<a class="dropdown-item" href="/browsesort?sort=date">Date added, newest
												first</a>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="row mb-5">

							<%
							if(itemData.length!=0){
							var i=1;
							itemData.forEach(function(data){
							%>
							
							
								  <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
									<div class="block-4 text-center border" style="height: 100%;">
									  <div class="block-4-text p-4">
																			
										<h3><a href="/offeritem?itemid=<%= data.ItemID %>&category=<%= data.Category %>"><%=data.Title %> </a></h3>
										<a href="/offeritem?itemid=<%= data.ItemID %>&category=<%= data.Category %>"><img src="<%=data.ImagePath %>" alt="Image placeholder"
															  class="img-fluid" loading="lazy"></a>
										<br />
									  </div>
									</div>
								  </div>
											   
										  <%  i++; }) %>
							<% } else{ %>
							  <tr>
								<td colspan="7">No Data Found</td>
							  </tr>
							<% } %>
							

							


						</div>
						
					</div>

					<div class="col-md-3 order-1 mb-5 mb-md-0">


						<div class="border p-4 rounded mb-4">
								<h3 class="mb-3 h6 text-uppercase text-black d-block">Categories</h3>
								<ul class="list-unstyled mb-0">
								<li class="mb-1"><a href="/browsecat?cat=books" class="d-flex"><span>Books</span> </a></li>
								<li class="mb-1"><a href="/browsecat?cat=clothing" class="d-flex"><span>Clothing</span></a></li>
								<li class="mb-1"><a href="/browsecat?cat=electronics" class="d-flex"><span>Electronics</span>
									</a></li>
								<li class="mb-1"><a href="/browsecat?cat=food" class="d-flex"><span>Food</span></a></li>
								<li class="mb-1"><a href="/browsecat?cat=home" class="d-flex"><span>Home</span> </a></li>
								<li class="mb-1"><a href="/browsecat?cat=garden" class="d-flex"><span>Garden</span> </a></li>
								<li class="mb-1"><a href="/browsecat?cat=sports" class="d-flex"><span>Sports</span> </a></li>
								<li class="mb-1"><a href="/browsecat?cat=toys" class="d-flex"><span>Toys</span></a></li>
								<li class="mb-1"><a href="/browsecat?cat=healthandbeauty" class="d-flex"><span>Health and Beauty</span>
									</a></li>
								<li class="mb-1"><a href="/browsecat?cat=hobbies" class="d-flex"><span>Hobbies</span></a></li>
								<li class="mb-1"><a href="/browsecat?cat=other" class="d-flex"><span>Other</span></a></li>
								<a href="/browse"><button  type="button" class="btn btn-primary">Reset</button></a>
							</div>

							 <div class="border p-4 rounded mb-4">

								<div class="mb-4">
									<h3 class="mb-3 h6 text-uppercase text-black d-block">Collection</h3>
									<ul class="list-unstyled mb-0">
										<li class="mb-1"><a href="/browsecoll?coll=pickup" class="d-flex"><span>Pick-up</span> </a></li>
										<li class="mb-1"><a href="/browsecoll?coll=localdelivery" class="d-flex"><span>Local delivery</span> </a></li>
									</ul>
									<a href="/browse"><button  type="button" class="btn btn-primary">Reset</button></a>
								</div>
							</div>

						
					</div>
				</div>
			</div>
		</div>
	</div>


	<!-- Start Fixed Background IMG -->

	<div class="fixed-background">
		<div class="fixed-wrap">
			<div class="fixed"></div>
		</div>
	</div>



	<!-- Start Footer -->
	<%- include("partials/footer") -%>

	<!-- End Footer -->

	<!-- Script Source Files -->

	<!-- jQuery -->
	<script src="js/jquery-3.5.1.min.js"></script>
	<!-- Bootstrap 4.5 JS -->
	<script src="js/bootstrap.min.js"></script>
	<!-- Popper JS -->
	<script src="js/popper.min.js"></script>
	<!-- Font Awesome -->
	<script src="js/all.min.js"></script>


	<script src="js/jquery-3.3.1.min.js"></script>
	<script src="js/jquery-ui.js"></script>
	<script src="js/popper.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/owl.carousel.min.js"></script>
	<script src="js/jquery.magnific-popup.min.js"></script>
	<script src="js/aos.js"></script>

	<script src="js/main.js"></script>

	<!-- End Script Source Files -->
</body>

</html>