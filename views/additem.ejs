<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") -%>

  <body>
    <%- include("partials/navigationloggedin", {page:"browse"}); -%>

    <!-- Navigation -->
    <nav class="subnavbar navbar-expand-lg">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/browseloggedin">Offers</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/browsewantedloggedin">Wanted</a>
        </li>
      </ul>
    </nav>

    <!-- End Navigation -->

    <div>
      <div class="site-wrap bg-light">
        <div class="site-section">
          <div class="container rounded border border-primary">
            <form action="additem" method="POST">
              <div class="form-group">
                <label class="form-label">Image - only needed for offered items</label>
                <input type="file" class="form-control mb-1" name="img" accept="image" />
              </div>
              <div class="form-group">
                <label class="form-label">Type</label>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Offering</td>
                      <td>
                        <input type="radio" name="type" value="offering" checked />
                      </td>
                    </tr>
                  </label>
                </div>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Wanted</td>
                      <td>
                        <input type="radio" name="type" value="wanted" />
                      </td>
                    </tr>
                  </label>
                </div>
              </div>
              <div class="card-body">
                <div class="form-group">
                  <label class="form-label">Title</label>
                  <input
                    type="text"
                    class="form-control mb-1"
                    placeholder="e.g. box of food"
                    name="title"
                  />
                </div>
                <div class="form-group">
                  <label class="form-label">Description</label>
                  <textarea
                    class="form-control"
                    rows="3"
                    placeholder="Type your message here..."
                    name="description"
                  ></textarea>
                </div>
              </div>

              <div class="form-group">
                <label class="form-label">Category</label>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Books</td>
                      <td>
                        <input type="radio" name="category" value="books" checked />
                      </td>
                    </tr>
                  </label>
                </div>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Clothing</td>
                      <td>
                        <input type="radio" name="category" value="clothing" />
                      </td>
                    </tr>
                  </label>
                </div>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Electronics</td>
                      <td>
                        <input type="radio" name="category" value="electronics" />
                      </td>
                    </tr>
                  </label>
                </div>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Food</td>
                      <td>
                        <input type="radio" name="category" value="food" />
                      </td>
                    </tr>
                  </label>
                </div>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Home</td>
                      <td>
                        <input type="radio" name="category" value="home" />
                      </td>
                    </tr>
                  </label>
                </div>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Garden</td>
                      <td>
                        <input type="radio" name="category" value="garden" />
                      </td>
                    </tr>
                  </label>
                </div>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Sports</td>
                      <td>
                        <input type="radio" name="category" value="sports" />
                      </td>
                    </tr>
                  </label>
                </div>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Toys</td>
                      <td>
                        <input type="radio" name="category" value="toys" />
                      </td>
                    </tr>
                  </label>
                </div>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Toiletries</td>
                      <td>
                        <input type="radio" name="category" value="toiletries" />
                      </td>
                    </tr>
                  </label>
                </div>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Other</td>
                      <td>
                        <input type="radio" name="category" value="other" />
                      </td>
                    </tr>
                  </label>
                </div>
              </div>

              <div class="form-group">
                <label class="form-label">Collection</label>

                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Pick-up</td>
                      <td>
                        <input type="radio" name="collection" value="pickup" checked />
                      </td>
                    </tr>
                  </label>
                </div>
                <div class="form-group px-5">
                  <label class="switcher">
                    <tr>
                      <td>Local delivery</td>
                      <td>
                        <input type="radio" name="collection" value="localdelivery" />
                      </td>
                    </tr>
                  </label>
                </div>
              </div>
              <div class="text-center mt-3 pb-5">
                <input
                  class="btn btn-sm btn-primary btn-block"
                  style="width: 50%; font-size: large"
                  style="background-color: #199e0f; border: none"
                  type="submit"
                  value="Save"
                />
                <input
                  action="action"
                  class="btn btn-sm btn-secondary btn-block"
                  style="width: 50%; font-size: large"
                  style="background-color: #199e0f; border: none"
                  value="Cancel"
                  onclick="history.go(-1);"
                />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Start Footer -->
    <footer>
      <div class="container">
        <div class="row text-light text-center py-4 justify-content-center">
          <div class="col-sm-10 col-md-8 col-lg-6">
            <h4>Find us on our Socials</h4>
            <ul class="social pt-3">
