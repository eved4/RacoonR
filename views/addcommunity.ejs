<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") -%>

  <body>
    <%- include("partials/navigationloggedin", {page:"communities"}) -%>

    <!-- End Navigation -->

    <div class="site-wrap bg-light">
      <div class="site-section">
        <div class="container">
          <div class="col-12 text-center mt-2 bg-light">
            <h1 class="text-dark pb-5">Create a new community</h1>
            <div class="border-top border-primary d-none d-lg-block w-25 mx-auto my-3"></div>
                      </div>
          <form action="addcommunity" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label class="form-label">Community Name</label>
                  <input
                    type="text"
                    class="form-control mb-1"
                    placeholder="e.g. Books"
                    name="name"
                  />
                </div>
                <div class="form-group">
                  <label class="form-label">Description</label>
                  <textarea
                    class="form-control"
                    rows="3"
                    placeholder="Type your description here..."
                    name="description"
                  ></textarea>
                </div>

                <div class="form-group">
                  <label class="form-label">Category</label>
                  <div class="form-group px-5">
                    <label class="switcher">
                      <tr>
                        <td>Books</td>
                        <td>
                          <input type="radio" name="category" value="books" checked />
                        </td>
                      </tr>
                    </label>
                  </div>
                  <div class="form-group px-5">
                    <label class="switcher">
                      <tr>
                        <td>Clothing</td>
                        <td>
                          <input type="radio" name="category" value="clothing" />
                        </td>
                      </tr>
                    </label>
                  </div>
                  <div class="form-group px-5">
                    <label class="switcher">
                      <tr>
                        <td>Electronics</td>
                        <td>
                          <input type="radio" name="category" value="electronics" />
                        </td>
                      </tr>
                    </label>
                  </div>
                  <div class="form-group px-5">
                    <label class="switcher">
                      <tr>
                        <td>Food</td>
                        <td>
                          <input type="radio" name="category" value="food" />
                        </td>
                      </tr>
                    </label>
                  </div>
                  <div class="form-group px-5">
                    <label class="switcher">
                      <tr>
                        <td>Home</td>
                        <td>
                          <input type="radio" name="category" value="home" />
                        </td>
                      </tr>
                    </label>
                  </div>
                  <div class="form-group px-5">
                    <label class="switcher">
                      <tr>
                        <td>Garden</td>
                        <td>
                          <input type="radio" name="category" value="garden" />
                        </td>
                      </tr>
                    </label>
                  </div>
                  <div class="form-group px-5">
                    <label class="switcher">
                      <tr>
                        <td>Sports</td>
                        <td>
                          <input type="radio" name="category" value="sports" />
                        </td>
                      </tr>
                    </label>
                  </div>
                  <div class="form-group px-5">
                    <label class="switcher">
                      <tr>
                        <td>Toys</td>
                        <td>
                          <input type="radio" name="category" value="toys" />
                        </td>
                      </tr>
                    </label>
                  </div>
                  <div class="form-group px-5">
                    <label class="switcher">
                      <tr>
                        <td>Health and Beauty</td>
                        <td>
                          <input type="radio" name="category" value="healthandbeauty" />
                        </td>
                      </tr>
                    </label>
                  </div>
                  <div class="form-group px-5">
                    <label class="switcher">
                      <tr>
                        <td>Hobbies</td>
                        <td>
                          <input type="radio" name="category" value="hobbies" />
                        </td>
                      </tr>
                    </label>
                  </div>
                  <div class="form-group px-5">
                    <label class="switcher">
                      <tr>
                        <td>Other</td>
                        <td>
                          <input type="radio" name="category" value="other" />
                        </td>
                      </tr>
                    </label>
                  </div>
                </div>
              </div>

              <div class="col-12 text-center">
                <input
                  class="btn btn-sm btn-primary btn-block"
                  style="width: 100%; font-size: large"
                  style="border: none"
                  type="submit"
                  value="Save"
                />
                <input
                  action="action"
                  class="btn btn-sm btn-secondary btn-block"
                  style="width: 100%; font-size: large"
                  style="border: none"
                  value="Cancel"
                  onclick="history.go(-1);"
                />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Start Footer -->
    <%- include("partials/footer") -%>

    <!-- End Footer -->

    <!-- Script Source Files -->

    <!-- jQuery -->
    <script src="js/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap 4.5 JS -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Popper JS -->
    <script src="js/popper.min.js"></script>
    <!-- Font Awesome -->
    <script src="js/all.min.js"></script>

    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/jquery-ui.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/aos.js"></script>

    <script src="js/main.js"></script>

    <!-- End Script Source Files -->
  </body>
</html>
